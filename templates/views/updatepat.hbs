<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="css/pateint.css" />
  </head>
  <body>
    <section class="custom-container">
      <header>Update Patient Form</header>
      <form action="/update-patient" method="post" class="custom-form" enctype="multipart/form-data">

        <!-- Add a hidden input field to store the patient's ID -->
        <input type="hidden" name="patientId" value="{{patient._id}}">

        <div class="custom-input-box">
          <label>Full Name</label>
          <!-- Prefill the full name input with the patient's data -->
          <input type="text" placeholder="Enter full name" name="fullName" value="{{patient.fullName}}" required />
        </div>

        <div class="custom-input-box">
          <label>Email Address</label>
          <!-- Prefill the email input with the patient's data -->
          <input type="text" placeholder="Enter email address" name="pemail" value="{{patient.pemail}}" required />
        </div>

        <div class="custom-column">
          <div class="custom-input-box">
            <label>Phone Number</label>
            <!-- Prefill the phone number input with the patient's data -->
            <input type="number" placeholder="Enter phone number" name="pnumber" value="{{patient.pnumber}}" required />
          </div>
          <div class="custom-input-box">
            <label>Birth Date</label>
            <!-- Prefill the birth date input with the patient's data -->
            <input type="date" placeholder="Enter birth date" name="birthDate" value="{{patient.birthDate}}" required />
          </div>
        </div>

       

        <div class="custom-input-box custom-address">
          <label>Address</label>
          <input type="text" placeholder="Enter street address" name="streetAddress1" required />
          <input type="text" placeholder="Enter street address line 2" name="streetAddress2" required />
          <div class="custom-column">
            <div class="custom-select-box">
              <select name="country">
                <option hidden>Country</option>
                <option value="America">America</option>
                <option value="Japan">Japan</option>
                <option value="India">India</option>
                <option value="Nepal">Nepal</option>
              </select>
            </div>
            <input type="text" placeholder="Enter your city" name="city" required />
          </div>
          <div class="custom-column">
            <input type="text" placeholder="Enter your region" name="region" required />
            <input type="number" placeholder="Enter postal code" name="postalCode" required />
          </div>
        </div>

        <div class="custom-input-box">
          <label>Upload Documents</label>
          <input type="file" name="document" accept="application/pdf, image/*" />
        </div>

        <!-- Update the button text to "Save Changes" -->
        <button type="submit">Save Changes</button>
      </form>
    </section>
    <!-- =========== Scripts =========  -->
    <script src="js/adminpage.js"></script>

    <!-- ====== ionicons ======= -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
  </body>
</html>
