  <body>
    <div id="add">
<div class="patdetails" id="allpatients">
    <div class="recentOrders">
        <div class="cardHeader">
            <h2 >Recent Patients</h2>
          
        </div>

        <table>
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Birth Date</th>
                    <th>Gender</th>
                    <th>Street Address</th>
                    <th>Country</th>
                    <th>City</th>
                    <th>Region</th>
                    <th>Postal Code</th>
                    <th>Document</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>

           <tbody>
                        {{#each patients as |patient|}}
                        <tr>
                            <td hidden="true">{{patient.id}}</td>
                            <td>{{patient.fullName}}</td>
                            <td>{{patient.pemail}}</td>
                            <td>{{patient.pnumber}}</td>
                            <td>{{patient.birthDate}}</td>
                            <td>{{patient.gender}}</td>
                            <td>{{patient.streetAddress1}}, {{patient.streetAddress2}}</td>
                            <td>{{patient.country}}</td>
                            <td>{{patient.city}}</td>
                            <td>{{patient.region}}</td>
                            <td>{{patient.postalCode}}</td>
                            <td>
                                <!-- Add the following code for the document link -->
                                {{#if patient.document}}
                                    <a href="/uploads/{{patient.document}}" target="_blank">View Document</a>
                                {{else}}
                                    No Document
                                {{/if}}
                            </td>
                            <td><a href="/updatepat">Edit</a></td>
                            <!-- Inside the loop that displays patients -->
                            <td>
                                <form action="/delete-patient" method="post">
                                    <!-- Use a hidden input field to store the patient's ID -->
                                    <input type="hidden" name="patientId" value="{{patient._id}}">
                                    <!-- Add a delete button or link to trigger the form submission -->
                                    <button type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

    
